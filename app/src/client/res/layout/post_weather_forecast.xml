                android:gravity="center"
                android:textSize="@dimen/small_text_size" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/detail_about_weather_layout_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <com.oleksandr.havryliuk.tvcontentcontroller.client.content.view.utils.TemperatureView
                android:id="@+id/tv4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                app:textSize="@dimen/small_text_size" />


            <TextView
                android:id="@+id/time_text_view_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/small_small_dimen"
                android:gravity="center"
                android:textSize="@dimen/small_text_size" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/detail_about_weather_layout_5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <com.oleksandr.havryliuk.tvcontentcontroller.client.content.view.utils.TemperatureView
                android:id="@+id/tv5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                app:textSize="@dimen/small_text_size" />

            <TextView
                android:id="@+id/time_text_view_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/small_small_dimen"
                android:gravity="center"
                android:textSize="@dimen/small_text_size" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/detail_about_weather_layout_6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <com.oleksandr.havryliuk.tvcontentcontroller.client.content.view.utils.TemperatureView
                android:id="@+id/tv6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                app:textSize="@dimen/small_text_size" />

            <TextView
                android:id="@+id/time_text_view_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/small_small_dimen"
                android:gravity="center"
                android:textSize="@dimen/small_text_size" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/detail_about_weather_layout_7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <com.oleksandr.havryliuk.tvcontentcontroller.client.content.view.utils.TemperatureView
                android:id="@+id/tv7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                app:textSize="@dimen/small_text_size" />


            <TextView
                android:id="@+id/time_text_view_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/small_small_dimen"
                android:gravity="center"
                android:textSize="@dimen/small_text_size" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/detail_about_weather_layout_8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <com.oleksandr.havryliuk.tvcontentcontroller.client.content.view.utils.TemperatureView
                android:id="@+id/tv8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                app:textSize="@dimen/small_text_size" />

            <TextView
                android:id="@+id/time_text_view_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/small_small_dimen"
                android:gravity="center"
                android:textSize="@dimen/small_text_size" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/future_weather_forecast_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/day_future_weather_text_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="end|center_vertical"/>

        <ImageView
            android:id="@+id/future_weather_image_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/temperature_future_weather_text_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="start|center_vertical"/>

        <TextView
            android:id="@+id/day_future_weather_text_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="end|center_vertical"/>

        <ImageView
            android:id="@+id/future_weather_image_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/temperature_future_weather_text_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="start|center_vertical"/>

        <TextView
            android:id="@+id/day_future_weather_text_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="end|center_vertical"/>

        <ImageView
            android:id="@+id/future_weather_image_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/temperature_future_weather_text_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="start|center_vertical"/>

    </LinearLayout>

</LinearLayout>