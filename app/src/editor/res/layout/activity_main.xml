<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/large_x_dimen"
        android:background="@drawable/background"
        android:orientation="horizontal">

    <TextView
        style="@style/Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_dimen"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/settings"
        android:textStyle="bold" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment"
        android:layout_marginBottom="@dimen/large_x_dimen"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <View
        android:layout_marginBottom="@dimen/large_x_dimen"
        android:layout_alignParentBottom="true"
        style="@style/Separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/large_x_dimen"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@drawable/background">

        <FrameLayout
            android:id="@+id/main_menu_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/main_menu_image"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_home"/>
        </FrameLayout>


        <View
            style="@style/Separator"
            android:layout_width="1dp"
            android:layout_height="wrap_content"/>

        <FrameLayout
            android:id="@+id/new_post_menu_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/new_post_menu_image"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_post"/>

        </FrameLayout>

        <View
            style="@style/Separator"
            android:layout_width="1dp"
            android:layout_height="wrap_content"/>

        <FrameLayout
            android:id="@+id/all_posts_menu_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/all_posts_menu_image"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_squares"/>

        </FrameLayout>

    </LinearLayout>

</RelativeLayout>