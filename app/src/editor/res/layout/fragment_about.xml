<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/large_x_dimen"
        android:background="@drawable/background"
        android:orientation="horizontal">

        <TextView
            style="@style/Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_dimen"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/about"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large_x_dimen"
        android:orientation="vertical">

        <TextView
            android:textColor="@color/independence"
            android:textSize="18sp"
            android:gravity="center"
            android:padding="@dimen/large_dimen"
            android:text="@string/about_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            style="@style/Separator"
            android:layout_marginRight="@dimen/default_dimen"
            android:layout_marginLeft="@dimen/default_dimen"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:textColor="@color/independence"
            android:textSize="14sp"
            android:gravity="center"
            android:padding="@dimen/large_dimen"
            android:text="@string/created_by"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>