<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/date_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="11.12.13"
            android:id="@+id/date_text_view"
            android:textColor="@color/dark_purple"
            android:textStyle="italic"
            android:layout_marginEnd="@dimen/small_dimen"
            android:layout_marginTop="@dimen/small_dimen"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title_text_view"
            android:layout_weight="1"
            android:gravity="start"
            android:text="@string/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SmallTitle"
            android:layout_marginTop="@dimen/small_dimen"
            android:layout_marginBottom="@dimen/small_dimen"
            android:layout_marginEnd="@dimen/default_dimen"
            android:layout_marginStart="@dimen/default_dimen"/>

        <TextView
            android:id="@+id/type_text_view"
            android:layout_weight="3"
            android:gravity="center"
            android:text="@string/type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SmallTitle"
            android:layout_marginTop="@dimen/small_dimen"
            android:layout_marginBottom="@dimen/small_dimen"
            android:layout_marginEnd="@dimen/default_dimen"
            android:layout_marginStart="@dimen/default_dimen"
            android:textStyle="bold"/>

    </LinearLayout>

    <TextView
        android:id="@+id/about_text_view"
        android:text="@string/about"
        android:textSize="@dimen/small_text_size"
        android:textColor="@color/independence"
        android:layout_marginStart="@dimen/default_dimen"
        android:layout_marginEnd="@dimen/default_dimen"
        android:layout_marginTop="@dimen/small_dimen"
        android:layout_marginBottom="@dimen/small_dimen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ad_state_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/SmallTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/state"
            android:layout_margin="@dimen/small_dimen"/>

        <Switch
            android:id="@+id/state_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/large_dimen"
            android:layout_marginTop="@dimen/large_dimen"
            android:layout_marginRight="@dimen/large_dimen"
            android:layout_weight="1"
            android:paddingEnd="@dimen/large_x_dimen"
            android:layout_margin="@dimen/small_dimen"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/edit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            style="@style/Separator"
            android:layout_height="0.5dp"
            android:layout_marginEnd="@dimen/default_dimen"
            android:layout_marginStart="@dimen/default_dimen"
            android:layout_marginTop="@dimen/small_dimen"
            android:layout_width="match_parent"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                android:id="@+id/edit_button"
                style="@style/ButtonLight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/large_x_dimen"
                android:layout_marginRight="@dimen/large_x_dimen"
                android:layout_marginBottom="@dimen/large_dimen"
                android:gravity="center"
                android:textSize="@dimen/small_text_size"
                android:text="@string/edit" />


            <TextView
                android:layout_weight="1"
                android:id="@+id/delete_button"
                style="@style/ButtonLight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/large_x_dimen"
                android:layout_marginRight="@dimen/large_x_dimen"
                android:layout_marginBottom="@dimen/large_dimen"
                android:textSize="@dimen/small_text_size"
                android:gravity="center"
                android:text="@string/delete" />

        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/Separator"
        android:layout_width="match_parent"
        />


</LinearLayout>