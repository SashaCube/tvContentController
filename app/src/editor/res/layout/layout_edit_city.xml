<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent_black">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="1dp">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/label_edit_city_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/small_dimen"
                android:fontFamily="casual"
                android:text="@string/edit_weather_city"
                android:textColor="@color/independence"
                android:textSize="@dimen/large_text_size" />

            <EditText
                android:id="@+id/input_city_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_dimen"
                android:hint="@string/edit_weather_city_hint"
                android:maxLines="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/save_button"
                    style="@style/ButtonLight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/large_dimen"
                    android:layout_marginRight="@dimen/large_dimen"
                    android:layout_marginBottom="@dimen/large_dimen"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/save"
                    android:textSize="@dimen/default_text_size" />

                <TextView
                    android:id="@+id/cancel_button"
                    style="@style/ButtonLight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/large_dimen"
                    android:layout_marginRight="@dimen/large_dimen"
                    android:layout_marginBottom="@dimen/large_dimen"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/cancel"
                    android:textSize="@dimen/default_text_size" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>