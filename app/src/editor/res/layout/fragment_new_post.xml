<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_purple"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/new_post"
            android:textStyle="bold"
            android:layout_margin="@dimen/default_dimen"
            style="@style/Title"/>


        <ImageView
            android:id="@+id/sort_icon"
            android:layout_width="@dimen/small_icon_size"
            android:layout_height="@dimen/small_icon_size"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/default_dimen"
            android:src="@drawable/ic_sort"
            android:contentDescription="@string/sort" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        style="@style/Separator"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:hint="@string/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/BaseInput"/>

            <EditText
                android:hint="@string/about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/BaseInput"/>


            <Spinner
                android:id="@+id/spinner"
                android:layout_margin="@dimen/large_dimen"
                android:layout_width="@dimen/default_width"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"/>

            <View
                android:layout_width="match_parent"
                style="@style/Separator"/>

            <TextView
                android:text="@string/add_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/SmallTitle"/>

            <ImageView
                android:layout_width="@dimen/large_icon_size"
                android:layout_height="@dimen/large_icon_size"
                android:layout_gravity="center"
                android:layout_margin="@dimen/large_dimen"
                android:src="@drawable/ic_add_image"/>

            <View
                android:layout_width="match_parent"
                style="@style/Separator"/>

            <TextView
                android:text="@string/add_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/SmallTitle"/>

            <EditText
                android:hint="@string/new_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/BaseInput"/>


            <View
                android:layout_marginTop="@dimen/large_dimen"
                android:layout_width="match_parent"
                style="@style/Separator"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>